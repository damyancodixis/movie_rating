{% extends "base.html.twig" %}

{% block body %}
	<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			<a href="{{ path('homepage') }}">
				<img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
			</a>
			<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">Sign in to your account</h2>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
			{% if error %}
				<div class="text-red-400">{{ error.messageKey }}</div>
			{% endif %}

			<form class="space-y-6" method="post">
				<div>
					<label for="username" class="block text-sm font-medium leading-6 text-white">Username</label>
					<div class="mt-2">
						<input name="username" type="text" value="{{ lastUsername }}" autocomplete="username" required class="block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6">
					</div>
				</div>
				<div>
					<label for="password" class="block text-sm font-medium leading-6 text-white">Password</label>
					<div class="mt-2">
						<input name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6">
					</div>
				</div>

				<div class="flex items-center">
					<input id="remember-me" name="_remember_me" type="checkbox" class="h-4 w-4 rounded bg-white/5 ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-indigo-500">
					<label for="_remember_me" class="ml-3 block text-sm leading-6 text-white">Remember me</label>
				</div>

				<input type="hidden" name="_csrf_token" value={{ csrf_token('authenticate') }}>
				<input type="hidden" name="_target_path" value="{{ path('homepage') }}">


				<div>
					<button type="submit" class="flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">Sign in</button>
				</div>
			</form>

			<p class="mt-10 text-center text-sm text-gray-400">
				Not a member?
				<a href="{{ path('register_page') }}" class="font-semibold leading-6 text-indigo-400 hover:text-indigo-300">Create an account</a>
			</p>
		</div>
	</div>
{% endblock %}




