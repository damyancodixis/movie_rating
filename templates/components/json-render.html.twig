{# Displays json field with nested json fields. Parameters needed:
	array - the array that will be iterated for values
	labels - the label to be displayed for each item of the array
	propNames - the propery name for each item of the array
#}
{% for i in range(0, labels | length - 1) %}
	<div class="flex flex-col gap-4">
		<div class="text-white">{{ labels[i] }}:
			{% if array[propNames[i]] is iterable %}
				{# Display each item in array, if it's not last item, display comma as well #}
				{% for j in range(0, array[propNames[i]] | length - 1) %}
					<span class="text-gray-400">
						{{array[propNames[i]][j]}}{{j == array[propNames[i]] | length - 1 ? "" : ", " }}
					</span>
				{% endfor %}
			{% else %}
				<span class="text-gray-400">
					{{ array[propNames[i]] }}
				</span>
			{% endif %}
		</div>
		<hr class="h-px bg-gray-200 border-0 dark:bg-gray-700">
	</div>
{% endfor %}