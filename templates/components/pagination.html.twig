{# Pagination component. Parameters needed:
    page - the current page
    perPage - number of objects per page
    totalItems - the total number of objects in the current table
    totalPages - the total number of pages for the table
    routeName - the name propery of the #Route attribute of the controller
    urlParams - all parameters that come after the base route url ('id' for a single movie page, etc.)
#}
<div class="flex items-center justify-between border-t border-gray-700 px-4 py-3 sm:px-6">
    <div class="flex flex-1 justify-between sm:hidden">
        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': page - 1})) }}" class="relative inline-flex items-center rounded-md border border-gray-700 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 {{ page < 2 ? 'pointer-events-none bg-gray-500' : 'bg-white' }} ">Previous</a>
        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': page + 1})) }}" class="relative ml-3 inline-flex items-center rounded-md border border-gray-700 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 {{ page >= totalPages ? 'pointer-events-none bg-gray-500' : 'bg-white' }}">Next</a>
    </div>
    <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
            <p class="text-sm text-gray-400">
                Showing
                <span class="font-medium">{{1 + (perPage * page) - perPage}}</span>
                to
                <span class="font-medium">{{totalItems > page * perPage ? page * perPage : totalItems}}</span>
                of
                <span class="font-medium">{{totalItems}}</span>
                results
            </p>
        </div>
        <div>
            <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': page - 1})) }}" class="relative inline-flex items-center rounded-l-md px-2 py-2 ring-1 ring-inset  hover:bg-gray-50 focus:z-20 focus:outline-offset-0 {{ page < 2 ? 'pointer-events-none ring-gray-800 text-gray-800' : 'text-gray-400 ring-gray-700' }}">
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd"/>
                    </svg>
                </a>

                {# If there are more than 3 pages behind current page #}
                {% if page - 1 > 3 %}
                    {# Render dots and then page buttons for the previous 3 pages #}
                    <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-700 focus:outline-offset-0">...</span>
                    {% for i in range(page - 3, page - 1) %}
                        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': i})) }}" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white ring-1 ring-inset ring-gray-700 hover:bg-gray-500 focus:z-20 focus:outline-offset-0">{{i}}</a>
                    {% endfor %}
                {# If there is at least 1 page behind but less than or equal to 3 #}
                {% elseif page > 1 %}
                    {# Render page buttons for all pages that are behind #}
                    {% for i in range(1, page - 1) %}
                        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': i})) }}" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white ring-1 ring-inset ring-gray-700 hover:bg-gray-500 focus:z-20 focus:outline-offset-0">{{i}}</a>
                    {% endfor %}
                {% endif %}
                
                {# Render page button for current page #}
                <a class="pointer-events-none relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{{page}}</a>

                {# If there are more than 3 pages ahead of current page #}
                {% if totalPages - page > 3 %}
                    {# Redner page buttons for the next 3 pages and then dots #}
                    {% for i in range(page + 1, page + 3) %}
                        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': i})) }}" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white ring-1 ring-inset ring-gray-700 hover:bg-gray-500 focus:z-20 focus:outline-offset-0">{{i}}</a>
                    {% endfor %}
                    <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-700 focus:outline-offset-0">...</span>
                {# If there is at least 1 page ahead but less than or equal to 3 #}
                {% elseif page < totalPages %}
                    {# Render page buttons for all pages that are ahead #}
                    {% for i in range(page + 1, totalPages) %}
                        <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': i})) }}" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white ring-1 ring-inset ring-gray-700 hover:bg-gray-500 focus:z-20 focus:outline-offset-0">{{i}}</a>
                    {% endfor %}
                {% endif %}

                <a href="{{ path(routeName, app.request.query.all|merge(urlParams, {'page': page + 1})) }}" class="relative inline-flex items-center rounded-r-md px-2 py-2 ring-1 ring-inset hover:bg-gray-500 focus:z-20 focus:outline-offset-0 {{ page >= totalPages ? 'pointer-events-none ring-gray-800 text-gray-800' : 'text-gray-400 ring-gray-700' }}">
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
                    </svg>
                </a>
            </nav>
        </div>
    </div>
</div>